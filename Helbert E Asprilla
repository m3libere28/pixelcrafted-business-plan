    <script>
        // Wait for the DOM to be fully loaded
        document.addEventListener('DOMContentLoaded', () => {

            // --- Chart Configuration ---
            const chartFont = "'Lato', sans-serif";
            const primaryColor = '#4a90e2';
            const secondaryColor = '#f5a623';
            const accentColor = '#50e3c2';
            const greenColor = '#7ed321'; // For profit line
            const chartAnimationConfig = {
                duration: 1200, // Animation duration in ms
                easing: 'easeInOutQuart' // Smoother easing function
            };

            // Chart 1: Digital Product Category Popularity
            const catPopCtx = document.getElementById('categoryPopularityChart')?.getContext('2d');
            if (catPopCtx) {
                new Chart(catPopCtx, {
                    type: 'bar',
                    data: {
                        labels: ['Planners', 'Templates', 'Wall Art', 'Branding Kits', 'Educational'],
                        datasets: [{
                            label: 'Popularity Score',
                            data: [90, 80, 70, 60, 50],
                            backgroundColor: 'rgba(74, 144, 226, 0.7)', // primary color semi-transparent
                            borderColor: primaryColor,
                            borderWidth: 1,
                            borderRadius: 4, // Rounded bars
                        }]
                    },
                    options: {
                        responsive: true, maintainAspectRatio: false, animation: chartAnimationConfig,
                        scales: {
                            y: { beginAtZero: true, title: { display: true, text: 'Popularity Score (Example Scale)', font: { family: chartFont, size: 13 } }, ticks: { font: { family: chartFont } } },
                            x: { ticks: { font: { family: chartFont } } }
                        },
                        plugins: {
                            title: { display: true, text: 'Digital Product Category Popularity', font: { family: chartFont, size: 18, weight: 'bold' }, padding: { top: 10, bottom: 20 } },
                            legend: { display: false },
                            tooltip: { titleFont: { family: chartFont }, bodyFont: { family: chartFont }, boxPadding: 4 }
                        }
                    }
                });
            }

            // Chart 2: Budget Allocation (Startup Costs)
            const budgetCtx = document.getElementById('budgetAllocationChart')?.getContext('2d');
            if (budgetCtx) {
                new Chart(budgetCtx, {
                    type: 'doughnut',
                    data: {
                        labels: ['Design Tools', 'AI Subscriptions', 'Etsy Fees', 'Marketing', 'Assets', 'Education'],
                        datasets: [{
                            label: 'Budget Allocation',
                            data: [330, 600, 80, 600, 150, 100],
                            backgroundColor: [primaryColor, secondaryColor, '#d0021b', greenColor, '#bd10e0', accentColor], // Use defined colors
                            borderColor: 'var(--section-bg-color)', // Use CSS variable for background color
                            borderWidth: 3, // White border for separation
                            hoverOffset: 10 // Pop out effect on hover
                        }]
                    },
                    options: {
                        responsive: true, maintainAspectRatio: false, animation: chartAnimationConfig, cutout: '60%', // Make it a doughnut
                        plugins: {
                            title: { display: true, text: 'Startup Budget Allocation ($1,860 Total)', font: { family: chartFont, size: 18, weight: 'bold' }, padding: { top: 10, bottom: 20 } },
                            legend: { position: 'bottom', labels: { font: { family: chartFont }, boxWidth: 15, padding: 15 } },
                            tooltip: { titleFont: { family: chartFont }, bodyFont: { family: chartFont }, boxPadding: 4, callbacks: { label: function(context) { let label = context.label || ''; if (label) { label += ': '; } if (context.parsed !== null) { label += new Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD' }).format(context.parsed); } return label; } } }
                        }
                    }
                });
            }

            // Chart 3: Financials (Revenue & Expenses Over Time)
            const financialsCtx = document.getElementById('financialsChart')?.getContext('2d');
            if (financialsCtx) {
                const revenueData = [225, 600, 1200, 1800, 2700, 3750, 6000, 8000, 10000, 11000, 12000, 13000];
                const expenseData = [230, 230, 230, 465, 465, 465, 975, 975, 975, 975, 975, 975];
                new Chart(financialsCtx, {
                    type: 'line',
                    data: {
                        labels: ['M1', 'M2', 'M3', 'M4', 'M5', 'M6', 'M7', 'M8', 'M9', 'M10', 'M11', 'M12'],
                        datasets: [
                            { label: 'Projected Revenue ($)', data: revenueData, borderColor: primaryColor, backgroundColor: 'rgba(74, 144, 226, 0.1)', tension: 0.3, fill: true, pointBackgroundColor: primaryColor, pointRadius: 4, pointHoverRadius: 6 },
                            { label: 'Projected Expenses ($)', data: expenseData, borderColor: secondaryColor, backgroundColor: 'rgba(245, 166, 35, 0.1)', tension: 0.3, fill: true, pointBackgroundColor: secondaryColor, pointRadius: 4, pointHoverRadius: 6 }
                        ]
                    },
                    options: {
                        responsive: true, maintainAspectRatio: false, animation: chartAnimationConfig, interaction: { mode: 'index', intersect: false }, // Show tooltips for both lines on hover
                        scales: {
                            y: { beginAtZero: true, title: { display: true, text: 'Amount ($)', font: { family: chartFont, size: 13 } }, ticks: { font: { family: chartFont } } },
                            x: { ticks: { font: { family: chartFont } } }
                        },
                        plugins: {
                            title: { display: true, text: 'Projected Monthly Revenue vs. Expenses', font: { family: chartFont, size: 18, weight: 'bold' }, padding: { top: 10, bottom: 20 } },
                            legend: { position: 'bottom', labels: { font: { family: chartFont }, usePointStyle: true, padding: 20 } },
                            tooltip: { titleFont: { family: chartFont }, bodyFont: { family: chartFont }, boxPadding: 4, mode: 'index', intersect: false }
                        }
                    }
                });
            }

             // Chart 4: Break-Even Analysis (Cumulative Profit/Loss)
             const breakEvenCtx = document.getElementById('breakEvenChart')?.getContext('2d');
             if(breakEvenCtx) {
                 const revenueDataBE = [225, 600, 1200, 1800, 2700, 3750, 6000, 8000, 10000, 11000, 12000, 13000];
                 const expenseDataBE = [230, 230, 230, 465, 465, 465, 975, 975, 975, 975, 975, 975];
                 let cumulativeProfit = 0;
                 const cumulativeData = revenueDataBE.map((rev, index) => { cumulativeProfit += (rev - expenseDataBE[index]); return cumulativeProfit; });
                 cumulativeData.unshift(-1860); // Startup cost

                 new Chart(breakEvenCtx, {
                     type: 'line',
                     data: {
                         labels: ['Start', 'M1', 'M2', 'M3', 'M4', 'M5', 'M6', 'M7', 'M8', 'M9', 'M10', 'M11', 'M12'],
                         datasets: [{
                             label: 'Cumulative Profit/Loss ($)',
                             data: cumulativeData,
                             borderColor: greenColor, // Green for profit
                             backgroundColor: (context) => { // Color area based on profit/loss
                                const chart = context.chart;
                                const {ctx, chartArea} = chart;
                                if (!chartArea) { return null; } // Avoid error before area is drawn
                                const gradient = ctx.createLinearGradient(0, chartArea.bottom, 0, chartArea.top);
                                // Find the index where profit becomes non-negative
                                let breakEvenIndex = cumulativeData.findIndex(p => p >= 0);
                                if (breakEvenIndex === -1) breakEvenIndex = cumulativeData.length; // If never profitable
                                const breakEvenRatio = breakEvenIndex / cumulativeData.length;

                                gradient.addColorStop(0, 'rgba(208, 2, 27, 0.1)'); // Reddish tint below zero (Start)
                                gradient.addColorStop(Math.max(0, breakEvenRatio - 0.01), 'rgba(208, 2, 27, 0.1)'); // End of red tint just before break-even
                                gradient.addColorStop(Math.min(1, breakEvenRatio + 0.01), 'rgba(126, 211, 33, 0.1)'); // Start of green tint just after break-even
                                gradient.addColorStop(1, 'rgba(126, 211, 33, 0.1)'); // End of green tint
                                return gradient;
                             },
                             tension: 0.1,
                             fill: true,
                             pointRadius: 4,
                             pointBackgroundColor: greenColor,
                             pointHoverRadius: 6
                         }]
                     },
                     options: {
                         responsive: true, maintainAspectRatio: false, animation: chartAnimationConfig,
                         scales: {
                             y: { title: { display: true, text: 'Cumulative Profit ($)', font: { family: chartFont, size: 13 } }, ticks: { font: { family: chartFont } } },
                             x: { ticks: { font: { family: chartFont } } }
                         },
                         plugins: {
                             title: { display: true, text: 'Profitability Timeline & Break-Even Point', font: { family: chartFont, size: 18, weight: 'bold' }, padding: { top: 10, bottom: 20 } },
                             legend: { display: false },
                             tooltip: { titleFont: { family: chartFont }, bodyFont: { family: chartFont }, boxPadding: 4 }
                             // REMOVED Annotation plugin configuration as it requires separate script
                         }
                     }
                 });
             } // End if breakEvenCtx


            // --- Intersection Observer for Section Animations ---
            const sections = document.querySelectorAll('.animated-section');
            const observerOptions = {
                root: null, // relative to document viewport
                rootMargin: '0px',
                threshold: 0.1 // Trigger when 10% of the element is visible
            };

            const observer = new IntersectionObserver((entries, observer) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('is-visible');
                        // Optional: Stop observing once the animation has run
                        // observer.unobserve(entry.target);
                    }
                    // Optional: Remove class if element scrolls out of view
                    // else {
                    //     entry.target.classList.remove('is-visible');
                    // }
                });
            }, observerOptions);

            sections.forEach(section => {
                observer.observe(section);
            });

        }); // End DOMContentLoaded
    </script>

